<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:id="@+id/main_activity_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_activity_description"
        android:padding="@dimen/margin_medium"/>

    <CalendarView
        android:id="@+id/calendarMainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_choose_another_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/choose_another_date"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/btn_search_passenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/search_passenger"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>